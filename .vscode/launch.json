    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args":["--world_size","1","--rank","0"]
        },
            {
              "type": "lldb",
              "request": "launch",
              "name": "Debug",
              "program": "path_to/bin/python",
              "args": [],
              "cwd": "${workspaceFolder}/build"
            },
            { 
              "name": "Debug Attach",
              "type": "lldb",
              "request": "attach",
              "program": "path_to/bin/python",
              "processId": "${command:pickProcess}",
              "MIMode": "gdb"
          },
    ]
}